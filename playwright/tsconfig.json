{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "baseUrl": "./",
      "paths": {
        "*": ["./src/*"]
      },
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src", "tests", "pages", "./.eslintrc.js", "./playwright.config.ts"],
    "exclude": ["node_modules", "dist"],
    "overrides": [
      {
        "extends": [
          "plugin:@typescript-eslint/recommended-requiring-type-checking",
        ],
        "files": ["./**/*.{ts,tsx}"],
      },
    ],
  }
